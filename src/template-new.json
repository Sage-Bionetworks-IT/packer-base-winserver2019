{
  "builders": [
    {
      "ami_groups": "{{user `AmiGroups`}}",
      "ami_name": "{{user `ImageName`}}",
      "communicator": "winrm",
      "force_deregister": true,
      "winrm_insecure": true,
      "winrm_username": "Administrator",
      "winrm_use_ssl": true,
      "winrm_timeout": "15m",
      "user_data_file": "unattended/bootstrap.txt",
      "force_delete_snapshot": "true",
      "instance_type": "{{user `InstanceType`}}",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": "{{user `VolumeSize`}}",
          "volume_type": "gp2"
        }
      ],
      "profile": "{{user `AwsProfile`}}",
      "region": "{{user `AwsRegion`}}",
      "snapshot_groups": "{{user `SnapshotGroups`}}",
      "source_ami": "{{user `SourceImage`}}",
      "tags": {
        "BuiltBy": "Packer",
        "Department": "{{user `Department`}}",
        "Name": "{{user `ImageName`}}",
        "OwnerEmail": "{{user `OwnerEmail`}}",
        "Project": "{{user `Project`}}",
        "SourceAmiId": "{{ .SourceAMI }}",
        "SourceAmiName": "{{ .SourceAMIName }}"
      },
      "type": "amazon-ebs"
    }
  ],
  "post-processors": [
    {
      "output": "manifest.json",
      "strip_path": true,
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SendWindowsIsReady.ps1 -Schedule",
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule",
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1 -NoShutdown"
      ],
      "only": ["amazon-ebs"]
    }
  ],
  "variables": {
    "AmiGroups": "all",
    "Department": "Platform",
    "ImageName": "{{env `ImageName`}}",
    "InstanceType": "t3.small",
    "OwnerEmail": "it@sagebase.org",
    "Project": "Infrastructure",
    "SnapshotGroups": "all",
    "SourceImage": "ami-0eb7fbcc77e5e6ec6",
    "VolumeSize": "30"
  }
}
