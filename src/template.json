{
  "builders": [
    {
      "ami_groups": "{{user `AmiGroups`}}",
      "ami_name": "{{user `ImageName`}}",
      "communicator": "winrm",
      "force_delete_snapshot": "true",
      "instance_type": "{{user `InstanceType`}}",
      "profile": "{{user `AwsProfile`}}",
      "region": "{{user `AwsRegion`}}",
      "snapshot_groups": "{{user `SnapshotGroups`}}",
      "source_ami": "{{user `SourceImage`}}",
      "tags": {
        "BuiltBy": "Packer",
        "Department": "{{user `Department`}}",
        "Name": "{{user `ImageName`}}",
        "OwnerEmail": "{{user `OwnerEmail`}}",
        "Project": "{{user `Project`}}",
        "SourceAmiId": "{{ .SourceAMI }}",
        "SourceAmiName": "{{ .SourceAMIName }}"
      },
      "type": "amazon-ebs",
      "winrm_insecure": true,
      "winrm_use_ssl": true,
      "winrm_username": "Administrator"
    }
  ],
  "post-processors": [
    {
      "output": "manifest.json",
      "strip_path": true,
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "script": "init.ps1",
      "type": "powershell"
    }
  ],
  "variables": {
    "AmiGroups": "all",
    "Department": "Platform",
    "ImageName": "{{env `ImageName`}}",
    "InstanceType": "t3.micro",
    "OwnerEmail": "it@sagebase.org",
    "Project": "Infrastructure",
    "SnapshotGroups": "all",
    "SourceImage": "ami-0f38562b9d4de0dfe",
    "SshUsername": "root",
    "VolumeSize": "30"
  }
}
